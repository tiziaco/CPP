	"version": "0.2.0",
	"configurations": [
		{
			"name": "C++ Linux Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/CPP_02/ex03/main",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"preLaunchTask": "compile project",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "C++ MacOS Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/CPP_04/ex03/main",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			"preLaunchTask": "compile project"
		}

	]
}